extends ../layout

block main_content
    form(action="/seller/login", method="post")
        .form-group.row
            label(for="seller_id",class="col-12 col-sm-12 col-md-12 col-lg-3 col-form-label") Seller ID
            .col-12.col-sm-12.col-md-12.col-lg-9#seller_id
                input(type="password",name="seller_id",class="form-control")
        .form-group.row
            label(for="seller_name",class="col-12 col-sm-12 col-md-12 col-lg-3 col-form-label") Seller Name
            .col-12.col-sm-12.col-md-12.col-lg-9#seller_name
                input(type="text",name="seller_name",class="form-control")
        .form-group.row
            .col-12
                button(class="btn btn-primary",value="Login as seller") Login as seller
                a(href="/seller/register",class="mx-1 btn btn-warning text-light") Don't have an account ?